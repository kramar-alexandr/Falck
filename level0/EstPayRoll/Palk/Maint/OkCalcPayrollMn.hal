  LongInt i;
  boolean testf;
  
  wn = CurWindow;
  i = 1;
  while (GetRecordFromBrowse(CPr,wn,i)) begin
    testf=true;
    if (CPr.Invalid!=0) then begin testf = false; end;
    if (CPr.OKFlag!=0) then begin testf = false; end;
    if (testf) then begin
       RecordCopy(oldCPr,CPr);
       CPr.OKFlag = 1;
       //SetMarkFlag(CPr.OKFlag,CPr.OKMark);//ts, done in recordupdate
       if (RecordUpdate(oldCPr,CPr,true)==0) then begin
       end;
    end;
    i = i + 1;
  end;
  UpdateBrowses("CalcPayrollVc");
  return;
end;

global
updating procedure OkCalcPayrollMn(record RcVc RepSpec)
begin
  record CalcPayrollVc CPr;
  record CalcPayrollVc oldCPr; 
  LongInt frcpr,tocpr;
  boolean TrHs;
  string 10 ckey;
  boolean testf;
  
  frcpr=FirstInRange(RepSpec.f1,20);
  tocpr=LastInRange(RepSpec.f1,20);
  ResetLoop(CPr);
  if (nonblank(RepSpec.f1)) then begin
    ckey = "SerNr";
    CPr.SerNr=frcpr;
  end else begin
    ckey="CalcDate";
    CPr.CalcDate = RepSpec.sStartDate;
  end;
  TrHs=true;
  while (LoopKey(ckey,CPr,1,TrHs)) begin
    testf = true; 
    if (nonblank(RepSpec.f1)) then begin
      if (CPr.SerNr>tocpr) then begin 
         testf = false;
         if (ckey=="SerNr") then begin 
           TrHs=false; 
         end;   
      end;
    end else begin
      if (DateInRange(CPr.CalcDate,RepSpec.sStartDate,RepSpec.sEndDate)==false) then begin 
        testf = false;
        if (ckey=="CalcDate") then begin 
          TrHs=false; 
        end;
      end;
    end;
    if (CPr.Invalid!=0) then begin testf = false; end;
    if (CPr.OKFlag!=0) then begin testf = false; end;

    if (testf) then begin
       RecordCopy(oldCPr,CPr);
       CPr.OKFlag = 1;
       //SetMarkFlag(CPr.OKFlag,CPr.OKMark); //ts, done in recordupdate
       if (RecordUpdate(oldCPr,CPr,true)==0) then begin end;
    end;
  end;
LOkCalcPayrollMn:;
  return;
end;
