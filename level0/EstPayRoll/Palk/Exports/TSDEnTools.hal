begin 
  string 255 tstr;
  integer j;
  val tmp1070,tmp1090;
  
  if (rownr==0) then begin
    tmp1070=s1070; //2080
    tmp1090=s1090; //2100
  end else begin
    tmp1070=0;
    tmp1090=0;
  end;

  if (tsdadd1) then begin //Lisa1
