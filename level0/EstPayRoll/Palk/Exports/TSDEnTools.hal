    end;
    ExportPlainXml("<mvtList>",7);
    ExportPlainXml("<tsd_L1_A_Mvt>",8);
    ExportTagXml("c1150_TuliKood",tsdrowspec,9);
    ExportValTagXml("c1160_Summa",s1160,9);
    ExportPlainXml("</tsd_L1_A_Mvt>",8);
